<%- include ('../../partials/header.ejs') %> 

<%- include ('../../partials/navbar.ejs') %> 

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Edit Mode</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/articles/update">
                <input class="form-control" type="text" name="title" id="" placeholder="Title here..." value="<%= article.title %>"><br>
                <textarea name="body" id="article" cols="30" rows="10" class="form-control" placeholder="Write your article here..."><%- article.body %> </textarea><br>
                <input type="hidden" name="id" value="<%= article.id %>">

                <select name="category" id="" class="form-select">
                    <% categories.forEach((category) => { %>
                        <option value="<%= category.id %>"><%= category.title %></option>
                    <% }) %> 
                </select><br>
                
                <button class="btn btn-success">Submit Edit</button>
            </form>            
        </div>
    </div>    
</div>

<%- include ('../../partials/footer.ejs') %> 

<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script>

    tinymce.init({
        selector: "#article",
        plugins: [ // TinyMce plugins
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    });

</script>